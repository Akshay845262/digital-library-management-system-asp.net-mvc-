@model IEnumerable<WebApplication7.Models.book>


@{
    ViewBag.Title = "Index";
}

<h2>All Books</h2>

 @if (User.IsInRole("A")){
<p>@Html.ActionLink("Create New", "Create")</p>

   }
<p>


    @using (Html.BeginForm(null, null, FormMethod.Post))

    {

        @Html.TextBox("NameSearch", "", new { @Class = "form-control"})

        <input type="submit" class="btn" value="search" />

    }

</p>


<table class="table table-hover table-bordered">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category.catname)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category.catname)
            </td>

            @*<td>
                    <img src='~/IMG/@Html.ValueFor(modelItem => item.imageurl)' />
                </td>*@
            <td>
                @if (User.IsInRole("A"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                <span> |</span>

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
